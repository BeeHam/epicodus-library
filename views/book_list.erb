<h1>Book list for <%= @reader.name() %></h1>
<!-- # make books method before this functions -->
<% if @reader.books().any?()%>

  <% @reader.books().each do |book| %>
  <ul>
    <li> <%= book.title() %> </li>
  </ul>
  <% end %>


<% else %>

  <p>There are no books on this list!</p>

<% end %>

<form action="/readers/:id/books" method="post">
  <input id="reader_id" name="reader_id" type="hidden" value="<%= @reader.id() %>">
  <label for="title">Title:</label>
  <input id="title" name="title" type="text" placeholder="Title">

  <label for="pub_date">Publication Date:</label>
  <input id="pub_date" name="pub_date" type="text" placeholder="Publication Date">

  <label for="author">Author:</label>
  <input id="author" name="author" type="text" placeholder="Author">

  <button type="submit">Add it!!</button>
</form>

<div class="container">
  <a href="/"><button class="btn">Home</a>
</div>
